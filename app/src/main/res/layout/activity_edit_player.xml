<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.arcotek.pokerpay.EditPlayer">

    <TextView
        android:id="@+id/player_name"
        android:text="namehere"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/more_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/player_name"
        android:hint="@string/buy_in_field"
        android:inputType="numberDecimal" />
    <Button
        android:id="@+id/add_buy_in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/buy_in_field"
        android:layout_alignParentBottom="true" />
    <Button
        android:id="@+id/add_cash_out"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cash_out"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"/>
</RelativeLayout>
